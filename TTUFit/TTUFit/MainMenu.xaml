<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTUFit.MainMenu"
             BackgroundColor="#383838">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#FF6161" Padding="24" CornerRadius="0">
                <Label Text="Main Menu" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            
            <Button Text="View/Edit Macros" BackgroundColor="#FF6161" Clicked="NavigateViewMacros_OnClicked"></Button>
            <Button Text="View/Edit Goals" BackgroundColor="#FF6161" Clicked="NavigateGoals_OnClicked"></Button>
            <Button Text="Find Dining Locations" BackgroundColor="#FF6161" Clicked="NavigateDining_OnClicked"></Button>
            <Button Text="??" BackgroundColor="#FF6161" Clicked="Count_OnClicked"></Button>
            <Button Text="Exit" BackgroundColor="#FF6161" Clicked="NavigateExit_OnClicked"/>
            
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>