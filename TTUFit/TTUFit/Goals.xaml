<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTUFit.Goals"
             BackgroundColor="#383838">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#FF6161" Padding="24" CornerRadius="0">
                <Label Text="Goals" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label Text="Age: " HorizontalTextAlignment="Center" TextColor="White" FontSize="22" x:Name="age"/>
            <Label Text="Height: " HorizontalTextAlignment="Center" TextColor="White" FontSize="22" x:Name="height"/>
            <Label Text="Weight: " HorizontalTextAlignment="Center" TextColor="White" FontSize="22" x:Name="weight"/>

            <Button Text="Update" BackgroundColor="#FF6161" Clicked="Update_OnClicked"></Button>

            <Button Text="Edit" BackgroundColor="#FF6161" Clicked="Count_OnClicked"></Button>
            <Button Text="Main Menu" BackgroundColor="#FF6161" Clicked="NavigateMainMenu_OnClicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>