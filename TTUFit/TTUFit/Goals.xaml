<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTUFit.Goals"
             BackgroundColor="#383838">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#FF6161" Padding="24" CornerRadius="0">
                <Label Text="Goals" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label Text="Goal Weight: " HorizontalTextAlignment="Center" TextColor="White" FontSize="20" x:Name="goalWeight"/>
            <Label Text="Current Weight: " HorizontalTextAlignment="Center" TextColor="White" FontSize="20" x:Name="currentWeight"/>
            <Label Text="Weight loss /Week (Lbs): " HorizontalTextAlignment="Center" TextColor="White" FontSize="20" x:Name="lbsweek"/>
            <Label Text="Daily Calories: " HorizontalTextAlignment="Center" TextColor="White" FontSize="20" x:Name="dailyCals"/>

            <Button Text="Show Goals" BackgroundColor="#FF6161" Clicked="Update_OnClicked"></Button>
            <Button Text="Main Menu" BackgroundColor="#FF6161" Clicked="NavigateMainMenu_OnClicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>