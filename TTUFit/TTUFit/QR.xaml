<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTUFit.QR"
             BackgroundColor="#383838">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#FF6161" Padding="24" CornerRadius="0">
                <Label Text="QR Scanner" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Button Text="Scan" BackgroundColor="#FF6161" Clicked="NavigateQR_OnClicked"></Button>
            <Label Text="" x:Name="mycode" TextColor="White" HorizontalOptions="Center"/>
            <Button Text="Main Menu" BackgroundColor="#FF6161" Clicked="NavigateMainMenu_OnClicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>